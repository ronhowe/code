{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    // Getting Azure Storage Connection String From Configuration
    "MyAzureStorage": "UseDevelopmentStorage=true;",
    // Getting Database Connection String From Configuration
    "MyDatabase": "Server=LOCALHOST;Database=MyDatabase;Integrated Security=True;Application Name=MyWebApplication (Development);Encrypt=False;Connect Timeout=1;Command Timeout=0;"
  },
  // Getting MyFeature From Configuration
  "FeatureManagement": {
    "MyFeature": "true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // Getting MyConfiguration From Configuration
  "MyConfiguration": "MyWebApplication (Development)",
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "MyWebApplication": "Verbose",
        "MyClassLibrary.MyRepository": "Verbose",
        "MyClassLibrary.MyService": "Verbose"
      }
    },
    "Properties": {
      "Application": "MyWebApplication (Development)"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          // NOTE: Ideally should match MyIntegrationTests.cs.
          "outputTemplate": "[{Timestamp:yyyy-MM-dd @ HH:mm:ss.fff}] [{Level:u3}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}
