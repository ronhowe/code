{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ApplicationInsights": "",
    "MyAzureStorage": "UseDevelopmentStorage=true;",
    "MyDatabase": "Server=localhost;Database=MyDatabase;Integrated Security=True;Application Name=MyWebApplication (Production);Encrypt=False;Connect Timeout=1;Command Timeout=0;"
  },
  "FeatureManagement": {
    "MyFeature": "true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MyConfiguration": "MyWebApplication (Production)",
  "MyHeader": "MyHeader (Production)",
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "MyWebApplication": "Information",
        "MyClassLibrary.MyRepository": "Information",
        "MyClassLibrary.MyService": "Information"
      }
    },
    "Properties": {
      "Application": "MyWebApplication (Production)"
    },
    "Using": [
      "Serilog.Sinks.ApplicationInsights"
    ],
    "WriteTo": [
      {
        "Name": "ApplicationInsights",
        "Args": {
          // NOTE: Serilog:WriteTo:0:Args:connectionString
          "connectionString": "",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{UtcTimestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{MachineName}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\home\\LogFiles\\MyLogs\\MyWebApplication-Production-.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 52428800, // 50 MB
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{UtcTimestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{MachineName}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\home\\LogFiles\\MyLogs\\MyWebApplication-Production-.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 52428800, // 50 MB
          "rollOnFileSizeLimit": true
        }
      }
    ]
  }
}
